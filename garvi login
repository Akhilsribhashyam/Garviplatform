  <script>
    const pwd = document.getElementById('password');
    const toggle = document.getElementById('togglePwd');
    toggle.addEventListener('click', () => {
      const show = pwd.type === 'password';
      pwd.type = show ? 'text' : 'password';
      document.getElementById('eyeIcon').innerHTML = show
        ? `<path d='M13.875 18.825A10.05 10.05 0 0 1 12 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 0 1 1.563-3.029m5.858.908a3 3 0 1 1 4.243 4.243M9.878 9.878l4.242 4.242M3 3l18 18' />`
        : `<path d='M15 12a3 3 0 11-6 0 3 3 0 016 0z'/><path d='M2.458 12C3.732 7.943 7.523 5 12 5s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7s-8.268-2.943-9.542-7z'/>`;
    });

    document.getElementById('loginForm').addEventListener('submit', e => {
      e.preventDefault();
      const msg = document.getElementById('msg');
      msg.classList.remove('hidden');
      const email = document.getElementById('email').value.trim();
      const pass = pwd.value.trim();
      if (email && pass) {
        msg.textContent = '✅ Login successful! Redirecting...';
        msg.className = 'mt-6 text-center py-2 rounded-lg text-white bg-green-500';
        setTimeout(() => (window.location.href = 'dashboard.html'), 2000);
      } else {
        msg.textContent = '❌ Invalid credentials. Please try again.';
        msg.className = 'mt-6 text-center py-2 rounded-lg text-white bg-red-500';
      }
    });

    // Help window toggle for mobile
    document.getElementById('helpToggle').addEventListener('click', () => {
      const mobileHelp = document.getElementById('mobileHelp');
      const toggleIcon = document.getElementById('helpToggle').querySelector('svg path');
      
      if (mobileHelp.classList.contains('hidden')) {
        mobileHelp.classList.remove('hidden');
        toggleIcon.setAttribute('d', 'M5 15l7-7 7 7');
      } else {
        mobileHelp.classList.add('hidden');
        toggleIcon.setAttribute('d', 'M19 9l-7 7-7-7');
      }
    });

    // Help link handlers
    document.querySelectorAll('a[href^="#"]').forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const href = link.getAttribute('href');
        
        if (href === '#contact') {
          // Create mailto link
          window.open('mailto:support@garvi.gujarat.gov.in?subject=GARVI Login Support Request', '_blank');
        } else if (href === '#phone') {
          // Show phone number info
          alert('📞 GARVI Support Helpline\n\nPhone: +91-79-1234-5678\nAvailable: Mon-Fri, 9:00 AM - 6:00 PM\n\nFor immediate assistance with login issues, account access, or technical support.');
        } else if (href === '#guide') {
          // Show user guide info
          alert('📚 User Guide & Documentation\n\n• Login troubleshooting\n• Account setup instructions\n• Feature tutorials\n• FAQ section\n\nFor detailed help, contact support or visit the GARVI help center.');
        }
      });
    });
  </script>
